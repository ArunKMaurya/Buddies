<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".message.SearchProfile"
    android:background="@color/black"
    >

    <RelativeLayout
        android:id="@+id/rl_layout"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/black">

        <RelativeLayout
            android:id="@+id/rl_return"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginStart="20dp"
           >


            <ImageView
                android:id="@+id/ib1"
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:src="@drawable/ic_resource_return" />

            <ImageView
                android:id="@+id/ib2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="16dp"
                android:alpha="0.9"
                android:background="@color/black"
                android:src="@drawable/ic_arrow" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="80dp"
            android:gravity="center"
            android:text="New Message"
            android:textColor="@color/white"
            android:textSize="24sp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:text="Send"
            android:textColor="#ACACAC"
            android:textSize="16sp"

            />


    </RelativeLayout>

  <RelativeLayout

      android:id="@+id/search_bar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/black"
      android:layout_below="@id/rl_layout"
      >
      <RelativeLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="24dp"
          >

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:text="To"
              android:textColor="@color/white"
              android:textSize="16sp" />
      </RelativeLayout>






  </RelativeLayout>
    <RelativeLayout

        android:id="@+id/search_box"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/msg_recycler_block"
        android:layout_marginTop="32dp"
        android:layout_below="@id/rl_layout"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"



        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="24dp"
            android:gravity="center"

            >
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search People"
                android:textColor="#ACACAC"
                android:textSize="16sp"
                android:gravity="center"/>
        </RelativeLayout>



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="24dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            />

        <ImageButton
            android:id="@+id/ib_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="20dp"
            android:background="@color/black_3"
            android:src="@drawable/ic_search_icon" />

        </RelativeLayout>



    </RelativeLayout>





